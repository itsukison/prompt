{
  "name": "prompt-os",
  "productName": "promptOS",
  "version": "0.1.0",
  "description": "Global AI writing assistant - press Cmd+/ anywhere to generate text",
  "main": "src/main.js",
  "scripts": {
    "start": "npm run build:renderer && electron .",
    "dev": "vite build --watch",
    "build:renderer": "vite build",
    "package": "npm run build:renderer && electron-builder --dir",
    "build": "npm run build:renderer && electron-builder --config electron-builder.yml"
  },
  "author": "promptOS",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^17.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "electron": "^30.5.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vite": "^7.3.1"
  }
}
