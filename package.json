{
  "name": "prompt-os",
  "productName": "PromptOS",
  "version": "0.1.15",
  "description": "Global AI writing assistant - press Cmd+/ anywhere to generate text",
  "main": "src/main.js",
  "scripts": {
    "start": "npm run build:renderer && electron .",
    "dev": "vite build --watch",
    "build:renderer": "vite build",
    "package": "npm run build:renderer && electron-builder --dir",
    "build": "npm run build:renderer && electron-builder --config electron-builder.yml",
    "release": "npm run build:renderer && electron-builder --config electron-builder.yml --publish always"
  },
  "author": "promptOS",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/supabase-js": "^2.95.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.0.0",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.8.3",
    "lucide-react": "^0.564.0",
    "openai": "^6.22.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.24",
    "electron": "^30.5.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
